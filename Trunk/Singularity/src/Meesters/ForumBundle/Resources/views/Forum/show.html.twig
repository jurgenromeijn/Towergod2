{% extends '::base.html.twig' %}

{% block body %}
    <h1>{{ forum.name }}</h1>
    {% if app.user != null %}
        <a href="{{ path('MeestersForumBundle_TopicNew', {'forumId': forum.id}) }}">Nieuw topic</a>
    {% endif %}
    <table>
        <thead>
            <tr>
                <th colspan="2">Topics</th>
                <th>Reacties</th>
                <th>Bekeken</th>
                <th>Laatste bericht</th>
            </tr>
        </thead>
        <tbody>
            {% if forum.topics|length > 0 %}
                {% for topic in forum.topics %}
                    <tr>
                        <td>X</td>
                        <td><a href="{{ path('MeestersForumBundle_TopicShow', {'id': topic.id}) }}">{{ topic.name }}</a></td>
                        <td>0</td>
                        <td>0</td>
                        <td>Laatste</td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="5">
                        <p>Er zijn nog geen topics in dit forum.</p>
                    </td>
                </tr>
            {% endif %}
        </tbody>
    </table>
{% endblock %}